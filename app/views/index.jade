extends layout

block content
  h1= title
  p Welcome to #{title}

  - if(!user)
    p please login
    .login
      a(href="/auth/tumblr") login
  - else
    p
      | hello,
      = user.username
      | .
    p
      | user_token:
      = user.token
      br
      | user_token_secret:
      = user.tokenSecret
    .logout
      a(href="/logout") logout