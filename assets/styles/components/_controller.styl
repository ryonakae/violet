.controller
  position fixed
  left 50%
  bottom 0
  width 100%
  max-width $width_max
  height $height_controller
  transform translateX(-50%)
  overflow hidden
  clearfix()

  &__prev,
  &__likeReblog,
  &__next
    float left
    width 33.334%
    height 100%
    text-align center

  &__prev,
  &__next
    background-color rgba($bgColor_controller, 0.95)

    span
      width 25px
      height 28px
      display inline-block
      hide-text()
      margin-top 21px

  &__prev
    span
      background url('../images/controller_prev.svg') no-repeat

  &__likeReblog
    background-color rgba($bgColor_likeReblog, 0.95)

    &Icon
      width 50px
      height 50px
      display inline-block
      hide-text()
      background url('../images/controller_likeReblog.svg') no-repeat
      margin-top 10px

      &--liked
        background url('../images/controller_likeReblog_done.svg') no-repeat

  &__next
    span
      background url('../images/controller_next.svg') no-repeat