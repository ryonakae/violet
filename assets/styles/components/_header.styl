.header
  position fixed
  top 0
  left 50%
  width 100%
  max-width $width_max
  height $height_header
  transform translateX(-50%)
  background-color rgba($bgColor_header, 0.95)
  clearfix()
  z-index 1


  // logo
  &__logo
    float left
    margin 0
    width 65px
    height $height_header
    background-color rgba($bgColor_logo, 0.8)
    text-align center

    a
      display inline-block
      line-height 0
      margin-top 7px


  // toggle
  &__toggle
    float right
    position relative
    width 26px
    height 26px
    margin 8px 15px 0 0
    cursor pointer

    &:before,
    &:after
      content ''
      position absolute
      width 26px
      height 1px
      background-color $textColor_default

    &:before
      left 0
      top 50%
      transform translateY(-5px)

    &:after
      left 0
      top 50%
      transform translateY(5px)


  // navi
  &__navi
    opacity 0
    visibility hidden
    position absolute
    top $height_header
    left 0
    width 100%
    background-color rgba($bgColor_header, 0.95)

    &List
      margin 0
      padding 0
      list-style-type none

      &Item
        border-top 1px solid $borderColor_default

        a
          display block
          width 100%
          height 100%
          text-decoration none
          padding 15px $padding_page